<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/message_selected_pop_up_bg"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/contact_message_pop_up_item_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="@string/contact_message_pop_up_item_resend"
            android:visibility="gone" />
        <TextView
            android:id="@+id/contact_message_pop_up_item_redownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="@string/contact_message_pop_up_item_redownload"
            android:visibility="gone" />
        <TextView
            android:id="@+id/contact_message_pop_up_item_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="@string/contact_message_pop_up_item_copy"
            android:visibility="gone" />
        <TextView
            android:id="@+id/contact_message_pop_up_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="@string/contact_message_pop_up_item_del" />
    </LinearLayout>
    <ImageView
        android:id="@+id/message_selected_pop_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/message_selected_pop_up_window"
        android:src="@drawable/message_selected_pop_up_arrow" />
</RelativeLayout>