<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/conference_request_host_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight=".3"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="按时到岗是"
        android:textColor="@color/conference_message_list_view_item_text1_color"
        android:textSize="@dimen/conference_message_list_view_item_text1_font_size" >
    </TextView>

    <TextView
        android:id="@+id/conference_request_host_user_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight=".3"
        android:gravity="center_horizontal"
        android:text="@string/conference_request_host_list_item_content"
        android:textSize="@dimen/conference_message_list_view_item_text2_font_size" >
    </TextView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_weight=".6"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/conference_request_host_button_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_bg_blue_bound"
            android:gravity="center"
            android:paddingBottom="@dimen/button_padding_vertical"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:paddingTop="@dimen/button_padding_vertical"
            android:text="@string/conference_request_host_list_item_button_name_accept"
            android:textColor="@color/button_text_color_blue"
            android:textSize="@dimen/conference_message_list_view_item_text2_font_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/conference_request_host_button_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_bg_blue_bound"
            android:gravity="center"
            android:paddingBottom="@dimen/button_padding_vertical"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:paddingTop="@dimen/button_padding_vertical"
            android:text="@string/conference_request_host_list_item_button_name_reject"
            android:textColor="@color/button_text_color_blue"
            android:textSize="@dimen/conference_message_list_view_item_text2_font_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/button_padding_vertical"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:paddingTop="@dimen/button_padding_vertical"
            android:text="TextView"
            android:textSize="@dimen/conference_message_list_view_item_text2_font_size"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>