<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/selectfile_adapter_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scaleType="fitXY" />
    <CheckBox
        android:id="@+id/selectfile_adapter_check"
        style="@style/GraySquareCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/selectfile_adapter_image"
        android:layout_alignTop="@+id/selectfile_adapter_image"
        android:clickable="false"
        android:focusable="false" />
   
</RelativeLayout>