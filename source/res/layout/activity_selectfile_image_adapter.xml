<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/user_view_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/conversation_view_margin"
        android:layout_marginTop="@dimen/conversation_view_margin" >
        <RelativeLayout
            android:id="@+id/contact_user_img_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/conversation_view_margin"
            android:layout_marginLeft="@dimen/contacts_user_view_contact_user_name_margin_left"
            android:layout_marginTop="@dimen/conversation_view_margin" >
            <ImageView
                android:id="@+id/ws_selectFile_iamge_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/avatar" />
        </RelativeLayout>
        <TextView
            android:id="@+id/ws_selectFile_iamge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/contacts_user_view_contact_user_name_margin_left"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/contact_user_img_container"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/select_image_arrow"
            android:textColor="@color/contacts_user_view_item_color_offline"
            android:textSize="@dimen/common_item_text_size" />
        <ImageView
            android:id="@+id/select_image_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/conf_create_contacts_use_layout_name_margin_right"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_gray" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_gray_color_c2" />
</LinearLayout>